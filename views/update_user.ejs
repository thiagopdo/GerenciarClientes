<!-- include header -->
<%- include('include/_header') %>
    <!-- /include header -->

    <!-- MAIN site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex-justify-between">
                <div class="filter">
                    <a href="/"><i class="fa-solid fa-angles-left"></i> Todos Clientes</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Editar cliente</h2>
                <span class="text-light">Preencha os campos abaixo para editar um cliente</span>
            </div>

            <!-- formuladio cliente -->

            <!-- formulario -->
            <form method="POST" id="update_user">
                <div class="new_user">
                    <div class="form-group">
                        <label for="name" class="text-light">Nome: </label>
                        <input type="hidden" name="id" value="<%= user._id %>" />
                        <input type="text" name="name" value="<%= user.name %>" placeholder="JoÃ£o da Silva" />
                    </div>
                    <div class="form-group">
                        <label for="Email" class="text-light">Email: </label>
                        <input type="text" name="email" value="<%= user.email %>"
                            placeholder="exemplo@dominio.com.br" />
                    </div>
                    <div class="form-group">
                        <label for="CPF" class="text-light">CPF: </label>
                        <input type="text" name="cpf" value="<%= user.cpf %>" placeholder="999999999-99" />
                    </div>
                    <div class="form-group">
                        <label for="birthday" class="text-light">Data de Nascimento:
                        </label>
                        <input type="date" name="birthday" lang="pt-BR" value="<%= user.birthday %>" id="birthday"
                            data-date-format="dd/mm/yyyy" min="1950-01-01" max="2030-12-31" />
                    </div>
                    <div class="form-group">
                        <label for="status" class="text-light">Estado: </label>
                        <div class="radio inline">
                            <input type="radio" name="status" value="Ativo" <%=user.status=="Ativo" ? "checked" :"" %>
                            id="status" />
                            <label for="status" class="radio-label"> Ativo</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" name="status" value="Inativo" <%=user.status=="Inativo" ? "checked" :""
                                %> id="status1" />
                            <label for="status1" class="radio-label"> Inativo</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Salvar</button>
                    </div>
                </div>
            </form>

        </div>
    </main>

    <!-- include footer -->
    <%- include('include/_footer') %>
        <!-- /include footer -->