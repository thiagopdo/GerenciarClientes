<form method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Nome: </label>
            <input type="hidden" name="id" value="" />
            <input type="text" name="name" value="" placeholder="JoÃ£o da Silva" />
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email: </label>
            <input type="text" name="email" value="" placeholder="exemplo@dominio.com.br" />
        </div>
        <div class="form-group">
            <label for="birthday" class="text-light">Data de Nascimento:
            </label>
            <input type="date" name="birthday" lang="pt-BR" value="" id="birthday" data-date-format="dd/mm/yyyy"
                min="1950-01-01" max="2030-12-31" />
        </div>
        <div class="form-group">
            <label for="status" class="text-light">Estado: </label>
            <div class="radio inline">
                <input type="radio" name="status" value="1" id="status" />
                <label for="status" class="radio-label"> Ativo</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="status" value="0" id="status1" />
                <label for="status1" class="radio-label"> Inativo</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Salvar</button>
        </div>
    </div>
</form>