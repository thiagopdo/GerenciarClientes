<!-- include header -->
<%- include('include/_header') %>
  <!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
      <div class="box-nav d-flex justify-between">
        <a href="/add-user" class="border-shadow">
          <span class="text-gradient">Novo Cliente <i class="fas fa-user-plus"></i></span>
        </a>
      </div>
      <!-- formulario -->
      <form method="POST" action="/upload" enctype="multipart/form-data">
        <label for="csvfile">Escolha um arquivo CSV:</label>
        <input type="file" name="csvfile" id="csvfile" class="input-file" />
        <label for="csvfile" class="input-file-label">Selecionar arquivo</label>
        <button type="submit">Enviar</button>
      </form>


      <form action="/" method="POST">
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th>ID</th>
              <th>Nome</th>
              <th>@</th>
              <th>Data de Nascimento</th>
              <th>CPF</th>
              <th>Estado</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <%- include('include/_show') %>
          </tbody>
        </table>
      </form>
    </div>
  </main>
  <!-- /Main Site -->

  <!-- include footer -->
  <%- include('include/_footer') %>
    <!-- /include footer -->